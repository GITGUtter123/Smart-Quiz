{
  "manifest_version": 3,
  "name": "Smart Quiz Generator",
  "version": "1.0",
  "description": "Generate quiz questions from selected text.",
  "permissions": ["contextMenus", "activeTab", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["*://*/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
